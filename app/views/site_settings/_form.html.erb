<%= simple_form_for(@site_setting) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :site_name %>
    <%= f.input :logo %>
    <%= f.input :favicon %>
    <%= f.input :contact_form_text, input_html:{class: 'summernote' } %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
