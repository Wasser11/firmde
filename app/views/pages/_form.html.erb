<%= simple_form_for @page, wrapper: :inline_3_9_bootstrap, html: {class: 'form-horizontal' }, 
  defaults: {
    input_html: { class: 'form-control' }
  }  do |f| %>
  <%=  f.error_notification %>
  <%= f.input :title, placeholder: 'Title' %>
  <%= f.input :body, placeholder: 'Body', input_html:{class: 'summernote'} %>
  <%= f.input :photo, as: :file %>
  <%= f.input :parent_id, collection: Page.page_tree %>
  <%= f.input :order, collection: -50..50 %>
  <%= f.input :slug %>
  <%= f.button :submit %>
<% end %>


