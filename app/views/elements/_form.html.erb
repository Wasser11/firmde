<%= simple_form_for [@slideshow, @element], wrapper: :bootstrap, html: {id: 'element_form' }, 
  defaults: {
    input_html: { class: 'form-control' }
  } do |f| %>
  <%= f.error_notification %>

  <div class="col-sm-6">
    <%= f.input :tag, collection: ["div","a"], include_blank: false %>
    <%= f.input :x %>
    <%= f.input :y %>
    <%= f.input :speed %>
    <%= f.input :klass, as: :text, 
        hint: ("caption <br>
               lft  lfb  lfl lfr <br>
               btn red  green blue yellow  blue-hoki     <br>
               slide_btn 
               slide_title 
               slide_title_white  
               slide_subtitle 
               slide_desc        <br>
               slide_item_left
               slide_item_right  <br>
               start").html_safe, 
        input_html: {rows: 10 } %>
  </div>
  <div class="col-sm-6">
    <%= f.input :start %>
    <%= f.input :easing, collection: ["easeOutExpo", "easeOutBack"], include_blank: false  %>
    <%= f.input :href %>
    <div class="row">
      <div class="col-xs-6">
        <%= f.input :photo, as: :file %>
      </div>
      <div class="col-xs-6">
        <%= image_tag @element.photo, class: "element" if @element.photo.present? %>        
      </div>
    </div>
    <%= link_to "remove image", [:remove_photo,@slideshow, @element] if @element.photo.present? %>
    <%= f.input :body, input_html: {rows: 10,class: 'summernote' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>