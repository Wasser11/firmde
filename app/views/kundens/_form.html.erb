<%= simple_form_for @kunden, wrapper: :bootstrap, 
  defaults: {
    input_html: { class: 'form-control' }
  } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :url %>
    <%= f.input :photo, as: :file  %>
    <%= f.input :photo_gray, as: :file  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
