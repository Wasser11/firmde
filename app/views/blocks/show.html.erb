<p id="notice"><%= notice %></p>

<h3>
  <strong>Name of Block:</strong>
  <%= @block.title %>
</h3>

<p>
  <%= raw @block.body %>
</p>

<p>
  <strong>Css classes:</strong>
  <%= @block.css_classes %>
</p>

<p>
  <strong>Css:</strong>
  <%= @block.css_id %>
</p>

<div class="row">
  <div class="col-xs-2">
    <%= link_to 'Edit', edit_block_path(@block), class: "btn btn-success btn-block" %> 
  </div>
  <div class="col-xs-2">
    <%= link_to 'Back List', blocks_path, class: "btn btn-default btn-block" %>
  </div>
</div>