<%= simple_form_for @block, wrapper: :inline_3_9_bootstrap, html: {class: 'form-horizontal' }, 
  defaults: {
    input_html: { class: 'form-control' }
  }  do |f| %>
  <%= f.error_notification %>

  <%= f.input :title %>
  <%= f.input :body, input_html:{class: 'summernote'} %>
  <%= f.input :css_classes %>
  <%= f.input :css_id %>
  <%= f.button :submit %>
<% end %>