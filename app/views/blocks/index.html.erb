<h1>Listing blocks</h1>

<table  class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Css classes</th>
      <th>Css</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blocks.each do |block| %>
      <tr>
        <td><%= block.title %></td>
        <td><%= raw block.body %></td>
        <td><%= block.css_classes %></td>
        <td><%= block.css_id %></td>
        <td><%= link_to 'Show', block,class: "btn btn-info"  %></td>
        <td><%= link_to 'Edit', edit_block_path(block),class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', block, method: :delete,class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Block', new_block_path %>
